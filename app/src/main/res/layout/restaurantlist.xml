<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurant_list"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:background="@drawable/border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="88dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/restaurant_type_image"
        android:layout_width="14dp"
        android:layout_height="132dp"
        android:src="@drawable/type_rectangle_cafe" />

    <LinearLayout
        android:id="@+id/text_box"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/text_container1"
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Restaurant Name Here"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurant_phone_number"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="Phone Number"
                android:textColor="@color/hyper_Link"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/restaurant_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="Type"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_container2"
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/restaurant_hours"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="16dp"
                android:text="Restaurant Hours"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="16dp"
                android:text="Restaurant Address"
                android:textColor="@color/hyper_Link"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurant_website"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="16dp"
                android:text="Website"
                android:textColor="@color/hyper_Link"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>